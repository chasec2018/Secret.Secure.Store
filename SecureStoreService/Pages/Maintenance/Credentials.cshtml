@page
@model SecureStoreService.Pages.Maintenance.CredentialsModel
@{
    ViewData["Title"] = "Credentials";
}

    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-create-list" data-toggle="list" href="#list-create" role="tab" aria-controls="create">Create New Credential Entry</a>
                    <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Delete Credential Entry</a>
                    <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Edit Credential Entry</a>
                    <a class="list-group-item list-group-item-action" id="list-settings-list" data-toggle="list" href="#list-settings" role="tab" aria-controls="settings">Retrieve Credential Entry</a>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                        <form method="post">
                            <div class="form-group">

                                <div class="form-group row">
                                    <label for="StoreUsernameInput" class="col-sm-2 col-form-label">Store Usernname</label>
                                    <div class="col-sm-10">
                                        <input type="text" required class="form-control-plaintext" id="StoreUserNameInput" >
                                    </div>
                                </div>


                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">...</div>
                    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
                    <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>
                </div>
            </div>
        </div>
    </div>

